<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <children>
      <TextField fx:id="eT_email" promptText="usuario@email.es" GridPane.columnIndex="1">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" top="5.0" />
         </GridPane.margin>
         <font>
            <Font name="Verdana" size="12.0" />
         </font></TextField>
      <PasswordField fx:id="eT_cont" promptText="contraseña" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" top="5.0" />
         </GridPane.margin>
         <font>
            <Font name="Verdana" size="12.0" />
         </font></PasswordField>
      <TextField fx:id="eT_contV" promptText="" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" top="5.0" />
         </GridPane.margin>
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </TextField>
      <Button fx:id="button_continuar" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onContinuarClicked" text="Continuar" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
         <font>
            <Font name="Verdana" size="12.0" />
         </font></Button>
      <Button fx:id="button_cancelar" mnemonicParsing="false" onMouseClicked="#onCancelarClicked" text="Cancelar" textAlignment="CENTER" textFill="#ae2020" GridPane.halignment="CENTER" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
         <font>
            <Font name="Verdana" size="12.0" />
         </font></Button>
      <Text fx:id="text_usuario" fill="#7965c9" strokeType="OUTSIDE" strokeWidth="0.0" text="Email/Usuario" GridPane.halignment="CENTER">
         <font>
            <Font name="Verdana Bold" size="12.0" />
         </font>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </Text>
      <Text fill="#7965c9" strokeType="OUTSIDE" strokeWidth="0.0" text="Contraseña" GridPane.halignment="CENTER" GridPane.rowIndex="2">
         <font>
            <Font name="Verdana Bold" size="12.0" />
         </font>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </Text>
      <Label fx:id="lab_MostCont" onMouseEntered="#onMostrarContOver" onMouseExited="#onMostrarContNotOver" text="Mostrar Contraseña" textAlignment="CENTER" textFill="#0000009d" underline="true" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="2">
         <font>
            <Font name="Verdana" size="9.0" />
         </font>
         <GridPane.margin>
            <Insets bottom="5.0" right="10.0" top="5.0" />
         </GridPane.margin>
      </Label>
   </children>
</GridPane>
